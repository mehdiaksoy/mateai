# Database
DATABASE_URL="postgresql://user:password@localhost:5432/mateai?schema=public"

# Redis
REDIS_HOST="localhost"
REDIS_PORT=6379

# LLM Providers
ANTHROPIC_API_KEY="your-anthropic-key"
OPENAI_API_KEY="your-openai-key"
GOOGLE_API_KEY="your-google-gemini-key"

# Default LLM Settings
DEFAULT_LLM_PROVIDER="anthropic" # anthropic | openai | google
ANTHROPIC_MODEL="claude-3-5-sonnet-20241022"
OPENAI_MODEL="gpt-4-turbo-preview"
GOOGLE_MODEL="gemini-1.5-pro"

# Embedding Settings
EMBEDDING_PROVIDER="google" # google | openai
EMBEDDING_MODEL="text-embedding-004" # or "text-embedding-3-small" for OpenAI
EMBEDDING_DIMENSIONS=768

# Application
NODE_ENV="development" # development | production | test
PORT=3000
LOG_LEVEL="info" # debug | info | warn | error

# Slack (optional)
SLACK_BOT_TOKEN=""
SLACK_APP_TOKEN=""
SLACK_SIGNING_SECRET=""

# Jira (optional)
JIRA_HOST=""
JIRA_EMAIL=""
JIRA_API_TOKEN=""

# GitHub (optional)
GITHUB_TOKEN=""
GITHUB_WEBHOOK_SECRET=""
